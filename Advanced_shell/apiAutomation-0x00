#!/bin/bash
API_URL="https://pokeapi.co/api/v2/pokemon/bulbasaur"
OUTPUT_FILE="data.json"
ERROR_LOG="error.txt"

status_code=$(curl -s -o "${OUTPUT_FILE}" -w "%{http_code}" "$API_URL")

if [ "$status_code" -ne 200 ]; then
    echo "Error: Received HTTP status code $status_code" > "${ERROR_LOG}"
    exit 1
else
    echo "Data fetched successfully and saved to ${OUTPUT_FILE}"
    exit 0
fi
